.qrcode{
  width: 100%;
  height: 350rpx;
  text-align:center
}
.qrcodeImg{
  width:300rpx;
  height: 300rpx;
  margin-top:50rpx
}
.qrcodeTip{
  margin-top:50rpx;
  font-size:28rpx;
  color: #999;
  text-align:center
}
.noMember{
padding:0 20rpx;
margin-top:350rpx;
}
.setCode{
    background: #45cdc6;
    color: #fff;
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    border: 0;
    margin: 0 auto;
    width:250rpx;
    height: 92rpx;
    margin-top: 50rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 32rpx;
    border-radius: 8rpx;
    position: relative;
